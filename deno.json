{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --unstable-temporal --allow-net --allow-env --allow-read --watch src/main.ts",
    "start": "deno run --unstable-temporal --allow-net --allow-env --allow-read src/main.ts",
    "test": "./scripts/test.sh",
    "test:watch": "./scripts/test.sh --watch",
    "lint": "deno run -A npm:eslint@^9 .",
    "lint:fix": "deno run -A npm:eslint@^9 . --fix",
    "format": "deno run -A npm:prettier@^3 --write .",
    "format:check": "deno run -A npm:prettier@^3 --check ."
  },
  "imports": {
    "@evanpurkhiser/eslint-config": "npm:@evanpurkhiser/eslint-config@^0.27.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225",
    "@std/assert": "jsr:@std/assert@^1",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "hono": "jsr:@hono/hono@^4"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
