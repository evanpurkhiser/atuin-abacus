{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-read main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:watch": "deno test --allow-net --allow-env --allow-read --watch",
    "lint": "deno run -A npm:eslint@^9 .",
    "lint:fix": "deno run -A npm:eslint@^9 . --fix",
    "format": "deno run -A npm:prettier@^3 --write .",
    "format:check": "deno run -A npm:prettier@^3 --check ."
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225",
    "@std/assert": "jsr:@std/assert@^1",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "@evanpurkhiser/eslint-config": "npm:@evanpurkhiser/eslint-config@*",
    "hono": "jsr:@hono/hono@^4"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
